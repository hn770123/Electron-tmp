{
  "name": "app",
  "version": "1.0.1",
  "description": "Minimal Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  },
  "workspaces": [
    "common-backend"
  ],
  "build": {
    "appId": "com.example.electron-app",
    "productName": "MyElectronApp",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
